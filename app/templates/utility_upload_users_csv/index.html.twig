{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block title %}Hello UtilityCsvUploadController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>Upload Contact List/Member List</h1>

    {% if writeCountArray is not empty %}
    <div>
        <h2>Upload Results</h2>

        {% if writeCountArray.user is not empty %}
        <h3>User records</h3>
        <ul>
            <li>Created: {{ writeCountArray.user.created }}</li>
            <li>Updated: {{ writeCountArray.user.updated }}</li>
            <li>Total: {{ writeCountArray.user.total }}</li>
        </ul>
        {% endif %}
    </div>
    {% endif %}

    <h2>Upload Form</h2>

    {{ form_start(form) }}
        {{ form_row(form.file) }}
        {{ form_row(form.preview) }}
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
{% endblock %}
